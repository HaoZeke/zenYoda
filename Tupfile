|> dist/pres/html/revealJS/lib/font/source-sans-pro/%b

: foreach &(paraLibRJS)/revealJS/lib/font/league-gothic/*  \
|> shx cp %f %o \
|> dist/pres/html/revealJS/lib/font/league-gothic/%b

: foreach &(paraLibRJS)/revealJS/plugin/zoom-js/*  \
|> shx cp %f %o \
